<div class="tasks-list">
  <p style="color: green"><%= notice %></p>

  <h1>Task Manager App</h1>
  <div>
    <button type="button">Tasks</button>
    <button type="button">
      <%= link_to "New task", new_task_path %>
    </button>
    <button type="button">Sort</button>
  </div>

  <div id="tasks">
    <% @tasks.each do |task| %>
      <%= render task %>
      <p>
        <%= link_to "Show this task", task %>
      </p>
    <% end %>
  </div>


</div>