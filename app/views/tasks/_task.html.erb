<div id="<%= dom_id task %>" class="task">
  <p>
    <strong>Created on:</strong>
    <%= task.created_at.strftime("%m-%d-%Y") %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= task.name %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= task.category %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Due date:</strong>
    <%= task.due_date %>
  </p>

  <p>
    <strong>Done:</strong>
    <%= task.is_complete ? 'Yes' : 'No' %>
  </p>

</div>
